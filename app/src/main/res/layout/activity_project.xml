<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контент -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/userbackgraund">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#202020"
            android:titleTextColor="#c0b27b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="?attr/actionBarSize"/>

        <!-- Кнопка для открытия Drawer -->
        <ImageButton
            android:id="@+id/btn_drawer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button_circle"
            android:src="@drawable/ic_menu"
            android:contentDescription="Меню"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Верхний блок с сортировкой -->
        <LinearLayout
            android:id="@+id/top_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <Spinner
                android:id="@+id/spinner_sort"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_gradient_border"
                android:padding="12dp"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <!-- Список проектов -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_block"
            app:layout_constraintBottom_toTopOf="@id/add_project_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <ScrollView
                android:id="@+id/projects_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/projects_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Кнопка "Добавить проект" -->
        <Button
            android:id="@+id/add_project_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Добавить проект"
            android:background="@drawable/button_selector"
            android:textColor="#c0b27b"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Боковое меню Drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#303030"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>
