<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userbackgraund">

    <!-- Поле поиска пользователя -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Найти пользователя"
        android:background="@drawable/edit_gradient_border"
        android:gravity="center"
        android:textColor="#c0b27b"
        android:textColorHint="#625B40"
        android:textStyle="bold"
        android:padding="12dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="300dp"/>

    <!-- Чекбокс "Запомнить меня" -->
    <CheckBox
        android:id="@+id/my_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запомнить меня"
        android:button="@drawable/custom_checkbox"
        android:textColor="#020426"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- SwipeRefreshLayout с ScrollView для списка пользователей -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/my_checkbox"
        app:layout_constraintBottom_toTopOf="@id/my_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <ScrollView
            android:id="@+id/users_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/users_container"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
            <Space
                android:id="@+id/space_bottom"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/swipe_refresh"
                app:layout_constraintBottom_toTopOf="@id/my_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <Space

        android:layout_width="0dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/swipe_refresh"
        app:layout_constraintBottom_toTopOf="@id/my_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Кнопка "Добавить пользователя" -->
    <Button
        android:id="@+id/my_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Добавить пользователя"
        android:background="@drawable/button_selector"
        android:textColor="#c0b27b"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
