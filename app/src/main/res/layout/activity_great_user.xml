<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userbackgraund"
    android:paddingTop="30dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="8dp"
            android:paddingTop="300dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

        <EditText
            android:id="@+id/firstNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_gradient_border"
            android:hint="Фамилия"
            android:padding="12dp"
            android:textColor="#c0b27b"
            android:textColorHint="#625B40" />

        <EditText
            android:id="@+id/userNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_gradient_border"
            android:hint="Имя (только буквы)"
            android:padding="12dp"
            android:textColor="#c0b27b"
            android:textColorHint="#625B40" />

        <EditText
            android:id="@+id/userPassEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_gradient_border"
            android:hint="Пароль (только буквы и цифры)"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#c0b27b"
            android:textColorHint="#625B40" />

        <EditText
            android:id="@+id/telEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_gradient_border"
            android:hint="Телефон (пример: +380501234567)"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="#c0b27b"
            android:textColorHint="#625B40" />

        <EditText
            android:id="@+id/userMailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_gradient_border"
            android:hint="Email (пример: example@mail.com)"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#c0b27b"
            android:textColorHint="#625B40" />

        <Button
            android:id="@+id/addUserButton"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector"
            android:text="Добавить пользователя"
            android:textColor="#c0b27b"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
